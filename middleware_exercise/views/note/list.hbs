<div class="container">
    <div class="col">
        {{ #each list }}
        <div class="row">
            <h4>{{ this.writtenBy }}
                <a href="/node/delete/{{ this.id }}"<button type="button" class="close" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </h4>
            <small id="date"></small>
            <h3><em>{{ this.title }}</em></h3>
            <p>{{ this.body }}</p>
            <a href='node/todo/edit/{{ this._id }}'>Edit..</a>
        </div>
