<script>
    n =  new Date();
    y = n.getFullYear();
    m = n.getMonth() + 1;
    d = n.getDate();
    h= n.getHours();
    min= n.getMinutes();
    s= n.getSeconds();
    min=checkTime(m);
    s=checkTime(s);
    
    document.getElementById("date").innerHTML = m + "/" + d + "/" + y + "  " + h + ":" + min + ":" + s;
    function checkTime(i) {
        if (i<10) {
            i="0" + i;
        }
        return i;
    }
</script>